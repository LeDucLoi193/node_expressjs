html
  head
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    link(rel="stylesheet", href="/styles/navbar.css")
  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-dark
      a.navbar-brand(href='/')
        img(src='/images/logo.png')
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.text-light.nav-link(href='/') Home
          li.nav-item
            a.text-light.nav-link(href='/users/search') Search
          li.nav-item
            a.text-light.nav-link(href='/users/create') Create
          li.nav-item
            a.text-light.nav-link(href='/cart') Cart
      if user
        p.text-light= user.name
    .container.pt-5
      block content
