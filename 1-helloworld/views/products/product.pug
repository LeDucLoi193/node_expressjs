extends ../layouts/common

block content

  h1 Products

  form(action="/product/search", method="get")
    .form-group.d-flex
      input(type="text", name="q", class="form-control")
      button(class="btn btn-primary ml-2") Search
  
  .container
    .row
      each product in products
        .card.col-sm-6.col-md-3.mb-3.p-0(style='width: 18rem;')
          img.card-img-top(src='https://loremflickr.com/320/240', alt='Card image cap')
          .card-body
            h5.card-title= product.name
            p.card-text= product.description
            a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart

  nav.float-right
    ul.pagination
      li.page-item
        a.page-link(href='#', tabindex='-1') Previous
      li.page-item
        a.page-link(href='/product?q=1') 1
      li.page-item
        a.page-link(href='/product?q=2') 2
      li.page-item
        a.page-link(href='/product?q=3') 3
      li.page-item
        a.page-link(href='#') Next
