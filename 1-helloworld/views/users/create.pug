extends ../layouts/common

block content
  h1 Create User

  if errors
    each error in errors
      .alert.alert-warning= error

  form(action="/users/create", method="POST", enctype="multipart/form-data")
    input(type="hidden", name="_csrf", value=csrfToken)
    .form-group
    label(for="name") Name
    input#name(type="text", name="name", value= values ? values.name : "").form-control.mb-3

    .form-group
    label(for="phone") Phone
    input#phone(type="text", name="phone", value= values ? values.phone : "").form-control.mb-3

    .form-group
    label(for="avatar") Avatar
    input#avatar(type="file", name="avatar").form-control-file.mb-3
    
    button.btn.btn-primary Create